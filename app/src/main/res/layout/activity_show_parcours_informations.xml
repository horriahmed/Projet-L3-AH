<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowParcoursInformations">
    <Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        style="@style/BarColor"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:onClick="menu"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:src="@drawable/menu"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcours informations"
                android:textColor="@color/textWhite"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:src="@drawable/logout"
                android:onClick="logOut"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


    </Toolbar>

<LinearLayout
    android:layout_above="@id/bottomToolbar"
    android:layout_below="@id/topToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tracageParcours"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapParcours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="48.8534"
            mapbox:mapbox_cameraTargetLng=" 2.3488"
            mapbox:mapbox_cameraZoom="12" >

        </com.mapbox.mapboxsdk.maps.MapView>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/parcoursinformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tracageParcours"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/bottomToolbar"
        android:orientation="vertical"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="Nom parcours :"
                    android:textColor="@color/dark"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:gravity="center"></TextView>
                <EditText
                    android:editable="false"
                    android:id="@+id/parcoursNom"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:hint="Nom parcours"
                    android:inputType="text"
                    ></EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="Date :"
                    android:textColor="@color/dark"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:gravity="center"></TextView>
                <EditText
                    android:id="@+id/parcoursDate"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:hint="Date"
                    android:inputType="text"
                    ></EditText>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                >
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="Description :"
                    android:textColor="@color/dark"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:gravity="center"></TextView>
                <EditText
                    android:id="@+id/parcoursDescription"
                    android:editable="false"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:hint="Description"
                    android:inputType="text|textMultiLine"
                    ></EditText>
            </TableRow>


        </TableLayout>

    </RelativeLayout>


</LinearLayout>



    <Toolbar
        android:id="@+id/bottomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        style="@style/BarColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/map"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="goToMain"
                android:src="@drawable/map"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:id="@+id/profile"
                android:onClick="goToProfile"
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
            <ImageView
                android:id="@+id/search"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:onClick="goToSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/search"
                />
        </RelativeLayout>

    </Toolbar>

</RelativeLayout>